<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="100dp"
    android:background="@drawable/edge"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#50bcdf"
        android:text="자리 / 조 뽑기" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/students"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="학생 수" />

            <EditText
                android:id="@+id/studentsNum"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:ems="10"
                android:textSize="20dp"
                android:hint="숫자만 입력해 주세요"
                android:inputType="textPersonName"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/BoonDan"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:textSize="20dp"
                android:gravity="center"
                android:text="분단 수 or 조당 인원 수" />

            <EditText
                android:id="@+id/BoonDanNum"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:ems="10"
                android:textSize="20dp"
                android:hint="숫자만 입력해 주세요"
                android:inputType="textPersonName"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startPlace"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:textColor="#00ff00"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="자리 배치" />

        <Button
            android:id="@+id/startTeam"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textColor="#00ff00"
            android:text="조원 뽑기" />
    </LinearLayout>


</LinearLayout>